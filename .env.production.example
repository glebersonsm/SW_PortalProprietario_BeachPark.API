# ============================================
# EXEMPLO DE ARQUIVO .env PARA PRODUÇÃO
# ============================================
# 
# INSTRUÇÕES:
# 1. Copie este arquivo para .env.production
# 2. Edite os valores conforme seu ambiente
# 3. NUNCA comite este arquivo no Git!
#
# ============================================

# ============================================
# AMBIENTE
# ============================================
TIPO_AMBIENTE=PRD
ASPNETCORE_ENVIRONMENT=Production

# ============================================
# JWT (Autenticação)
# ============================================
# IMPORTANTE: Gere uma chave forte com mínimo 32 caracteres
# Exemplo: openssl rand -base64 32
JWT_KEY=SUBSTITUIR_POR_UMA_CHAVE_SEGURA_MINIMO_32_CARACTERES
JWT_ISSUER=SW_Portal_Proprietario_API
JWT_AUDIENCE=SW_Portal_Proprietario_API

# ============================================
# CONNECTION STRINGS
# ============================================

# PostgreSQL (Principal)
DEFAULT_CONNECTION=Host=localhost;Port=5432;Database=swportal_prod;Username=swportal_user;Password=SUBSTITUIR_SENHA_POSTGRESQL

# Oracle CM (Time Sharing)
CM_CONNECTION=Data Source=(DESCRIPTION=(ADDRESS_LIST=(ADDRESS=(PROTOCOL=TCP)(HOST=SEU_HOST_ORACLE)(PORT=1521)))(CONNECT_DATA=(SERVICE_NAME=SEU_SERVICE)));User ID=SEU_USUARIO;Password=SUA_SENHA;Connection Timeout=30

# SQL Server Access Center (se aplicável)
ESOL_ACCESS_CENTER_CONNECTION=Data Source=SEU_SERVER;Initial Catalog=eSolutionAccessCenter;User ID=SEU_USUARIO;Password=SUA_SENHA

# SQL Server Portal (se aplicável)
ESOL_PORTAL_CONNECTION=Data Source=SEU_SERVER;Initial Catalog=eSolutionPortal;User ID=SEU_USUARIO;Password=SUA_SENHA

# Redis
REDIS_CONNECTION=localhost:6379,password=SUBSTITUIR_SENHA_REDIS

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=SUBSTITUIR_SENHA_REDIS
REDIS_DATABASE=0

# ============================================
# RABBITMQ
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# ============================================
# SMTP (Configurações gerenciadas pelo ParametroSistema)
# ============================================
# Nota: As configurações de SMTP são gerenciadas pelo ParametroSistema no banco.
# As variáveis abaixo são mantidas apenas para referência ou fallback.

# ============================================
# CORS
# ============================================
# Domínios permitidos separados por |
ORIGENS_PERMITIDAS=https://seudominio.com|https://www.seudominio.com|https://app.seudominio.com

# ============================================
# PATHS (Caminhos dos Arquivos)
# ============================================
WWWROOT_PATH=/var/www/swportal/wwwroot
WWWROOT_IMAGE_PATH=/var/www/swportal/wwwroot/images
WWWROOT_GRUPO_IMAGE_PATH=/var/www/swportal/wwwroot/images/grupos
NEW_DOCUMENTS_FILE_PATH=/var/www/swportal/documents
PATH_GERACAO_PDF_COMUNICACOES_GERAIS=/var/www/swportal/pdfs/comunicacoes
PATH_GERACAO_BOLETOS=/var/www/swportal/pdfs/boletos
CERTIDOES_MODELOS_PATH=/var/www/swportal/certidoes/modelos
CERTIDOES_GERACAO_PDF_PATH=/var/www/swportal/certidoes/pdf
CERTIDOES_GERACAO_PDF_CONTRATO_PATH=/var/www/swportal/certidoes/contratos

# ============================================
# CONFIGURAÇÕES GERAIS
# ============================================
USUARIO_SISTEMA_ID=1
EMPRESA_SW_PORTAL_ID=1
EMPRESA_CM_ID=1
TAG_GERAL_ID=1
TAG_TROPICAL_ID=2
TAG_HOMES_ID=3
PROGRAM_ID=PORTALPROPMVC_

# ============================================
# INTEGRAÇÃO
# ============================================
# Valores: eSolution (Multipropriedade) ou CM (Time Sharing)
INTEGRADO_COM=eSolution
CONTROLE_USUARIO_SFE=false
CONTROLE_USUARIO_ACCESS_CENTER=true
MULTIPROPRIEDADE_ATIVADA=true
TIME_SHARING_ATIVADO=false

# ============================================
# SEGURANÇA E VALIDAÇÃO
# ============================================
# Em produção, estas devem ser false
IGNORAR_VALIDACAO_LOGIN=false
USAR_SENHA_PADRAO_AMBIENTE_HOMOLOGACAO=false
BLOQUEAR_CRIACAO_ADM_FORA_DEBUG=true
UPDATE_DATABASE=true
UPDATE_FRAMEWORK=false

# Configurações de E-mail (Produção)
ENVIAR_EMAIL_APENAS_PARA_DESTINATARIOS_PERMITIDOS=false
DESTINATARIO_EMAIL_PERMITIDO=

# Configurações de SMS (Produção)
ENVIAR_SMS_APENAS_PARA_NUMERO_PERMITIDO=false
NUMERO_SMS_PERMITIDO=

# ============================================
# FILAS E PROCESSAMENTO
# ============================================
SEND_OPERATIONS_TO_LOG_QUEUE=true
SAVE_LOG_FROM_QUEUE=true
SEND_EMAIL_FROM_QUEUE=true
AUTOMATIC_EMAIL_ENABLED=true

# Tempos de espera (em minutos)
WAIT_SEND_LOG_QUEUE=1
WAIT_SAVE_LOG_QUEUE=1
WAIT_SEND_EMAIL_QUEUE=1

# Tempos de espera (em segundos)
WAIT_SEARCH_PIX=30
WAIT_FINALIZE_CARTAO=30

# ============================================
# AUDIT LOG
# ============================================
AUDIT_LOG_CONSUMER_CONCURRENCY=5
AUDIT_LOG_RETRY_ATTEMPTS=3
AUDIT_LOG_RETRY_DELAY_SECONDS=5

# ============================================
# BROKER DE PAGAMENTO
# ============================================
USE_BROKER_TYPE=NovaXSBrokerProduction
PODE_INFORMAR_PIX_SCP=true

# ============================================
# API RESERVAS CM (Time Sharing)
# ============================================
RESERVAS_CM_API_BASE_URL=http://localhost:8080
RESERVAS_CM_API_ID_PROMOTOR_RCI=1259656
RESERVAS_CM_API_RESERVANTE_RCI=BULKBANK
RESERVAS_CM_API_TEL_RESERVANTE_RCI=4540523011
RESERVAS_CM_API_ID_HOSPEDE_BULK_BANK=2194787
CM_USER_ID=1900693

# ============================================
# TSE (Time Sharing Exchange) - Se aplicável
# ============================================
TSE_API_ADDRESS=
TSE_LOGIN_PATH=
TSE_USER=
TSE_PASS=

# ============================================
# SO FALTA EU - Se aplicável
# ============================================
SO_FALTA_EU_URL=

# ============================================
# CERTIDÕES
# ============================================
CERTIDOES_POSITIVA_UNIDADE=
CERTIDOES_NEGATIVA_UNIDADE=
CERTIDOES_POSITIVA_CLIENTE=
CERTIDOES_NEGATIVA_CLIENTE=
CERTIDOES_CONTRATO_SCP_EMPRESA=
CERTIDOES_CONTRATO_SCP_ESPANHOL=
CERTIDOES_AGRUPAR_CLIENTE=false
CERTIDOES_PATH_VALIDACAO=

# ============================================
# GRUPOS DE USUÁRIOS
# ============================================
ADM_GROUP_DEFAULT_NAME=Administradores
